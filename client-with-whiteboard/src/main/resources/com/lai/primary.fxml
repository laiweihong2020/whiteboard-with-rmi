<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>
    
    <Text text="Create a new room" fx:id="informationText"
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
    
    <Label text="Username"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="createRoomUID"
        GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    
    <Button text="Create Meeting" onAction="#createNewMeetingRoom"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    </GridPane>

    <Separator />
   <GridPane alignment="center" hgap="10" vgap="10">
      <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>
      
      <Text text="Join an existing room" fx:id="informationText"
         GridPane.columnIndex="0" GridPane.rowIndex="0"
         GridPane.columnSpan="2"/>
      
      <Label text="Room Id"
         GridPane.columnIndex="0" GridPane.rowIndex="1"/>

      <TextField fx:id="joinRoomId"
         GridPane.columnIndex="1" GridPane.rowIndex="1"/>

      <Label text="Username"
         GridPane.columnIndex="0" GridPane.rowIndex="2"/>

      <TextField fx:id="joinUserId"
         GridPane.columnIndex="1" GridPane.rowIndex="2"/>
      
      <Button text="Join Meeting" onAction="#joinMeetingRoom"
         GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>
